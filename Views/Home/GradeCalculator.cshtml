@model Assignment1.Models.GradeCalculatorModel

<body>
    <h3>Grade Calculator: </h3>
    <p>(Input a number 0 - 100)</p>
    <form method="post">
        <label>Assignments (50%):</label>
        <input id="assignment" asp-for="assignment" maxlength="3" min="0" max="100" size="5" required /> %
        <br />
        <br />
        <label>Group Project (10%):</label>
        <input id="group" asp-for="group" maxlength="3" min="0" max="100" size="5" required /> %
        <br />
        <br />
        <label>Quizzes (10%):</label>
        <input id="quizzes" asp-for="quizzes" maxlength="3" min="0" max="100" size="5" required /> %
        <br />
        <br />
        <label>Exams (20%):</label>
        <input id="exams" asp-for="exams" maxlength="3" min="0" max="100" size="5" required /> %
        <br />
        <br />
        <label>INTEX (10%):</label>
        <input id="intex" asp-for="intex" maxlength="3" min="0" max="100" size="5" required /> %
        <br />
        <br />
        <input type="submit" value="Calculate" id="submitButton" />
    </form>
</body>